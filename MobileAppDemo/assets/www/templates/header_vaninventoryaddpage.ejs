<div id="vanInventory" data-role="header" data-position="fixed" style="height: 50px;">
    <div class="ui-bar-a">
        <h1 id="vanInventoryAddPage" data-translate="yes" class="ui-title" style="margin-top: 15px;">Translated Page Title Goes Here</h1>
        <a id="btnDone" href="" class="signature-panel-button-done button-default" data-role="button" data-mini="true" data-inline="true" data-theme="a">
            <%= Localization.getText( "done" ) %>
        </a>
    </div>
</div>
<div id="vanInventoryListHeader" class="ui-bar-d">
    <div class="ui-grid-a">
        <div class="ui-block-a guided-search-block-width guided-search-block-header">
            <h2 id="guidedSearchHeader" data-translate="yes" style="margin-left: 1px;">Guided Search</h2>
        </div>
        <div class="ui-block-b list-block-width list-block-div" style="border-left: none;">
            <h3 class="inventory-list-header-item" style="width: 20%;margin-left: 8%;"><%= Localization.getText( "partNumberLabel" )   %></h3> 
            <h3 class="inventory-list-header-item" style="width: 20%"><%= Localization.getText( "manufacturerLabel" ) %></h3>
            <h3 class="inventory-list-header-item" style="width: 12%"><%= Localization.getText( "bin" )               %></h3>
            <h3 class="inventory-list-header-item" style="width: 13%"> <%= Localization.getText( "quantityLabel" )     %></h3>
        </div>
        
        <div style="position:absolute;right: 0px;width: 15%;margin-right: 9px;">
            <div style="margin-top: -10px;">
               <a href="" id="previousPage" style="float:left;margin-top: 18px;" data-role="button" data-icon="arrow-l" data-iconpos="notext" data-inline="true"></a>
               <h3 id="pageHeader" data-translate="yes" style="float: left;margin-left: 10px;"></h3>
               <h3 id="currentPage" style="float: left;margin-left: 5px;"></h3>
               <h3 id="pageDivider" data-translate="yes" style="float: left;"></h3>
               <h3 id="pageCount" style="float: left;"></h3>    
               <a href="" id="nextPage" style="float:left;margin-top: 18px;margin-left: 15px;" data-role="button" data-icon="arrow-r" data-iconpos="notext" data-inline="true"></a>
            </div>
        </div>
    </div>
</div>

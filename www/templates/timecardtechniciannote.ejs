<div id="timecardtechniciannote" style="text-align: center;">
    <!-- Dialog header with buttons -->
    <div class="ui-bar-a">
        <div class="ui-grid-b">
            <div class="ui-block-a" style="width: 25%;">
            </div>
            <div class="ui-block-b" style="text-align: center; width: 50%;">
                <h3 style="display: inline-block;"><span><%= Localization.getText( "addTimeCardNote" ) %></h3>
            </div>
            <div class="ui-block-c" style="width: 25%;">
            </div>
       </div>
    </div>

    <div style="padding-left:10px;padding-right:10px;">
        <textarea id="txtTechnicianNote" style="height: 150px;"><%= technicianNotes %></textarea>
    </div>

